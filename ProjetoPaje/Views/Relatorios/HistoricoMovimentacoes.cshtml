@model IEnumerable<ProjetoPaje.Models.MovimentacaoModel>

@{
    ViewData["Title"] = "Histórico de Movimentações";
}

<h1>Histórico de Movimentações</h1>

<form asp-action="HistoricoMovimentacoes" method="get" class="mb-3">
    <div class="form-row">
        <div class="col-md-4">
            <input type="text" name="produtoNome" class="form-control" placeholder="Filtrar por nome do produto" value="@ViewData["ProdutoNomeFilter"]" />
        </div>
        <div class="col-md-3">
            <input type="date" name="dataInicio" class="form-control" value="@ViewData["DataInicioFilter"]" />
        </div>
        <div class="col-md-3">
            <input type="date" name="dataFim" class="form-control" value="@ViewData["DataFimFilter"]" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a asp-action="HistoricoMovimentacoes" class="btn btn-secondary">Limpar</a>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto.Nome)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhuma movimentação encontrada com os filtros aplicados.</p>
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar para Relatórios</a>
</div>

