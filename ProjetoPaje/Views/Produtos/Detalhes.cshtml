@model ProjetoPaje.Models.ProdutoModel

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes do Produto</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeMinima)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeMinima)
        </dd>
    </dl>
</div>

<h4 class="mt-4">Histórico de Movimentações</h4>
@if (Model.Movimentacoes != null && Model.Movimentacoes.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Data</th>
                <th>Tipo</th>
                <th>Quantidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movimentacao in Model.Movimentacoes.OrderByDescending(m => m.Data))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => movimentacao.Data)</td>
                    <td>@Html.DisplayFor(modelItem => movimentacao.Tipo)</td>
                    <td>@Html.DisplayFor(modelItem => movimentacao.Quantidade)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhuma movimentação registrada para este produto.</p>
}

<div>
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>

